<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts-config PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
    "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="dashboardForm" type="com.demo.struts1.form.DashboardForm" />
        <form-bean name="taskForm" type="com.demo.struts1.form.TaskForm"/>
        <form-bean name="loginForm" type="com.demo.struts1.form.LoginForm"/>

    </form-beans>

    <action-mappings>
        <action path="/login" type="org.apache.struts.actions.ForwardAction" forward="tiles.logon" />
        <action path="/postLogin" type="com.demo.struts1.action.User.LoginAction" name="loginForm" scope="request" validate="true" input="/WEB-INF/view/login.jsp">
            <forward name="success" path="/dashboard.do"/>
            <forward name="failure" path="tiles.logon"/>
        </action>
        <action path="/dashboard" type="com.demo.struts1.action.DashboardAction" name="dashboardForm">
            <forward name="success" path="tiles.dashboard" />
            <forward name="login" path="/login.do" />
        </action>
        <action path="/task-list" type="com.demo.struts1.action.Task.TaskListAction">
            <forward name="success" path="tiles.task.list" />
            <forward name="login" path="/login.do" />
        </action>
        <action path="/task-pagination" type="com.demo.struts1.action.Task.TaskListPaginationAction" scope="request" validate="false">
            <forward name="success" path="tiles.task.list.pagination"/>
            <forward name="login" path="/login.do" />
        </action>
        <action path="/task-init" type="com.demo.struts1.action.Task.TaskInitAction" name="taskForm" scope="request" validate="false" input="tiles.task.init">
            <forward name="success" path="tiles.task.init"/>
            <forward name="login" path="/login.do" />
        </action>
        <action path="/logout" type="com.demo.struts1.action.User.LogoutAction">
            <forward name="login" path="/login.do" />
        </action>
    </action-mappings>


    <controller processorClass="org.apache.struts.tiles.TilesRequestProcessor"/>

    <!-- Message Resources Configuration -->
    <message-resources parameter="MessageResources" />

    <!-- ========================= Tiles plugin ===============================-->
    <plug-in className="org.apache.struts.tiles.TilesPlugin" >
        <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
        <set-property property="moduleAware" value="true" />
    </plug-in>

</struts-config>
